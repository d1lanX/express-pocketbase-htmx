<section hx-target="this" hx-swap="outerHTML">
    <section>
        <aside>
            <% let urlProfilePic = `https://ui-avatars.com/api/?name=${locals.userRecord.name}&size=128` %>
            <img 
                src="<%= `${locals.baseUrl}/users/${locals.userRecord.id}/${locals.userRecord.avatar}` || urlProfilePic %>" 
                width="200" 
                height="200" 
                style="object-fit: contain;" 
                loading="lazy"
            >
        </aside>
    </section>
    <section>
        <% if (locals?.userData?.isLoggedIn) { %>
            <br>
            <button hx-get="/profile/edit" hx-include="[name='uid']">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                </svg>
            </button>
        <% } %>
        <input type="hidden" name="uid" value="<%= locals.userRecord.id %>">
        <h3>nombre:</h3><i><%= locals.userRecord.name || 'sin nombre' %></i>
        <h3>email:</h3><i><%= locals.userRecord.email || 'sin email' %></i>
        <h3>ubicaci√≥n:</h3><i><%= locals.userRecord.location || 'desconocida' %></i>
        <% let date = new Date(locals.userRecord.created); %>
        <h3>fecha registro:</h3><i><%= new Intl.DateTimeFormat('es-CO', { year: 'numeric', month: 'long' }).format(date) || 'desconocida' %></i>
    </section>
</section>